#include <stdio.h>

int main() {
    int number = 15;
    int colorful_balls[number];
    for (int i = 0; i < number; i++) {
        colorful_balls[i] = 1;
    }
    int size = sizeof(colorful_balls) / sizeof(colorful_balls[0]);
    printf("Количество шариков в коробке: %d\n", size);
    return 0;
}
